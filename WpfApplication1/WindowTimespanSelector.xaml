<Window x:Class="WpfApplication1.WindowTimespanSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Additional Time Spans" Height="310" Width="310"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </Window.Resources>
    <StackPanel Margin="7">

        <!-- Preset buttons -->
        <TextBlock x:Name="textBlockPresetHeader" Text="Add timespans relative to current:" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,6"/>
        <WrapPanel HorizontalAlignment="Center">
            <Button Name="buttonPlus2"  Content="+2 forward" HorizontalAlignment="Center" Width="95" Click="PresetClick" Tag="2"/>
            <Button Name="buttonMinus2" Content="-2 backward" HorizontalAlignment="Center" Width="95" Click="PresetClick" Tag="-2"/>
            <Button Name="buttonPlus4"  Content="+4 forward" HorizontalAlignment="Center" Width="95" Click="PresetClick" Tag="4"/>
            <Button Name="buttonMinus4" Content="-4 backward" HorizontalAlignment="Center" Width="95" Click="PresetClick" Tag="-4"/>
        </WrapPanel>

        <Separator Margin="0,10"/>

        <!-- Custom section -->
        <TextBlock x:Name="textBlockCustomHeader" Text="Custom:" FontWeight="Bold" Margin="0,0,0,6"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label x:Name="labelStartDate" Content="Start date:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <DatePicker Name="datePickerCustomStart" Grid.Row="0" Grid.Column="1"
                        Margin="4" SelectedDateFormat="Short"/>

            <Label x:Name="labelDirection" Content="Direction:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="4">
                <RadioButton Name="radioForward"  Content="Forward"  IsChecked="True" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <RadioButton Name="radioBackward" Content="Backward" VerticalAlignment="Center"/>
            </StackPanel>

            <Label x:Name="labelAdditionalSpans" Content="Additional spans:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox Name="comboCount" Grid.Row="2" Grid.Column="1" Margin="4"
                      SelectedIndex="0">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
            </ComboBox>
        </Grid>

        <Button Name="buttonOk" Content="OK" HorizontalAlignment="Right"
                Width="80" Margin="0,8,4,0" Click="OkClick"/>
    </StackPanel>
</Window>
