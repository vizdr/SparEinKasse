<Window x:Class="WpfApplication1.WindowWarning"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Warning" MinHeight="160" MaxHeight="250" MinWidth="250" MaxWidth="350">
    <Grid Height="Auto" Width="Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" ></ColumnDefinition>
            <ColumnDefinition Width="*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition MinHeight="30" Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="labelMessage" Height="Auto" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="Bisque" VerticalAlignment="Center" Padding="5">Message</Label>
          <Button HorizontalAlignment="Center" Width="90"  Grid.Row="1" Grid.Column="0" Name="buttonOk" VerticalAlignment="Center" IsDefault="True">Ok</Button>
        <Button  Grid.Row="2" Grid.Column="2" Name="buttonStop" Width="90" VerticalAlignment="Center" HorizontalAlignment="Center" >Stop</Button>
        <!--<TextBox Margin="20,11.996,12,76.659" Name="textBox_Message" />-->
    </Grid>
</Window>
